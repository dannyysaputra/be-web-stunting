{
  "openapi": "3.0.1",
  "info": {
    "title": "User Registration API",
    "description": "API for user registration with file upload.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api-web-stunting.up.railway.app/api/v1",
      "description": "Deploy"
    },
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Local server"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "message": {
                      "type": "string",
                      "example": "User successfully registered"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "example": "d1f9d7f2-6c1f-4d91-bac8-767644b1fb44"
                        },
                        "name": {
                          "type": "string",
                          "example": "User"
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "example": "user@gmail.com"
                        },
                        "handphone_number": {
                          "type": "string",
                          "example": "0888888888"
                        },
                        "avatar": {
                          "type": "string",
                          "example": "https://example.cloudinary.com"
                        },
                        "role_id": {
                          "type": "number",
                          "example": "1"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Please provide a valid input"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    },
                    "error": {
                      "type": "string",
                      "example": "Detailed error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login user",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@gmail.com",
                    "description": "User's email address"
                  },
                  "password": {
                    "type": "string",
                    "example": "useruser1234",
                    "description": "User's password"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Login successful"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "example": "d1f9d7f2-6c1f-4d91-bac8-767644b1fb44"
                        },
                        "name": {
                          "type": "string",
                          "example": "User"
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "example": "user@gmail.com"
                        },
                        "handphone_number": {
                          "type": "string",
                          "example": "0888888888"
                        },
                        "avatar": {
                          "type": "string",
                          "example": "https://example.cloudinary.com"
                        },
                        "token": {
                          "type": "string",
                          "example": "eyJhbGciOXVCJ9.MToyNi45NTRaIiwidXBkYXRlZEF0IjoiMjAyNC0wNy0xNFQxMTo0MToyNi45NTRaIiwiaWF0IjoxNzIxMDIwNzk2LCJleHAiOjE3MjExMDcxOTZ9.-C93X5t_QzreFU6_qjbLWJRvXhHMQZUL8Ql3S2rC7I4"
                        },
                        "role_id": {
                          "type": "number",
                          "example": "1"
                        },
                        "created_at": {
                          "type": "datetime",
                          "example": "2024-07-12T10:49:35Z"
                        },
                        "updated_at": {
                          "type": "datetime",
                          "example": "2024-07-12T10:49:35Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Invalid email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Email not found"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Wrong password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Wrong password"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/article": {
      "post": {
        "summary": "Create a new article",
        "tags": ["Articles"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/ArticleType"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Article successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "message": {
                      "type": "string",
                      "example": "User successfully registered"
                    },
                    "data": {
                      "$ref": "#/components/schemas/ArticleResponse"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Please provide a valid input"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    },
                    "error": {
                      "type": "string",
                      "example": "Detailed error message"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get articles",
        "tags": ["Articles"],
        "responses": {
          "201": {
            "description": "Article retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Article retrieved successfully"
                    },
                    "data": {
                      "$ref": "#/components/schemas/ArticleResponse"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    },
                    "error": {
                      "type": "string",
                      "example": "Detailed error message"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update article",
        "tags": ["Articles"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/ArticleType"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Article updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "message": {
                      "type": "string",
                      "example": "User successfully registered"
                    },
                    "data": {
                      "$ref": "#/components/schemas/ArticleResponse"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Article not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    },
                    "error": {
                      "type": "string",
                      "example": "Detailed error message"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete articles",
        "tags": ["Articles"],
        "responses": {
          "201": {
            "description": "Car successfully deleted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Car successfully deleted"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Article not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    },
                    "error": {
                      "type": "string",
                      "example": "Detailed error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "User",
            "description": "User's full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@gmail.com",
            "description": "User's email address"
          },
          "handphone_number": {
            "type": "string",
            "example": "08888888",
            "description": "User's handphone number"
          },
          "password": {
            "type": "string",
            "example": "useruser1234",
            "description": "User's password (must be at least 12 characters)"
          },
          "avatar": {
            "type": "file",
            "description": "User's avatar image file"
          }
        },
        "required": ["name", "email", "handphone_number", "password", "avatar"]
      },
      "ArticleType": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Definition stunting",
            "description": "Title of article"
          },
          "content": {
            "type": "string",
            "example": "Stunting is ..",
            "description": "Content of article"
          },
          "link": {
            "type": "string",
            "example": "https://example.link.com",
            "description": "Link to full article"
          },
          "poster": {
            "type": "string",
            "example": "https://example.cloudinary.com",
            "description": "Link poster to cloudinary"
          },
          "created_by": {
            "type": "string",
            "format": "uuid",
            "example": "d1f9d7f2-6c1f-4d91-bac8-767644b1fb44",
            "description": "Admin who created this article"
          }
        },
        "required": ["title", "content", "link", "poster", "created_by"]
      },
      "ArticleResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1,
            "description": "Article id"
          },
          "title": {
            "type": "string",
            "example": "Definition stunting",
            "description": "Title of article"
          },
          "content": {
            "type": "string",
            "example": "Stunting is ..",
            "description": "Content of article"
          },
          "link": {
            "type": "string",
            "example": "https://example.link.com",
            "description": "Link to full article"
          },
          "poster": {
            "type": "string",
            "example": "https://example.cloudinary.com",
            "description": "Link poster to cloudinary"
          },
          "created_by": {
            "type": "string",
            "format": "uuid",
            "example": "d1f9d7f2-6c1f-4d91-bac8-767644b1fb44",
            "description": "Admin who created this article"
          },
          "created_at": {
            "type": "datetime",
            "example": "2024-07-12T10:49:35Z",
            "description": "Created user date"
          },
          "updated_at": {
            "type": "datetime",
            "example": "2024-07-12T10:49:35Z",
            "description": "Updated user date"
          }
        }
      }
    }
  }
}
